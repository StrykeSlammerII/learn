<div class="version-select">
    <label>Version: </label>
    <select>
        {% for label, version in config.versions.branches %}
            {% if version.visible %}
                <option {% if config.environment == label %}selected="selected" {% endif %}value="{{ uri.rootUrl }}{{ version.path }}{{ uri.path }}">
                    {{ version.label }}
                </option>
            {% endif %}
        {% endfor %}
    </select>
</div>
